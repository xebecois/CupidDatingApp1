<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/LL_mainPageContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/LL1_mainPage_topNav"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/CV_undoMain"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="25dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <ImageButton
                    android:id="@+id/btnUndo_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/red_undo" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TV_mainH1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Discover"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_mainSH1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Manila"
                    android:textSize="18sp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/CV_filterMain"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="25dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <ImageButton
                    android:id="@+id/btnFilter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/filters_red" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <com.yuyakaido.android.cardstackview.CardStackView
            android:id="@+id/cardStackView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="10dp" />

        <LinearLayout
            android:id="@+id/LL_actionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="15dp">

            <ImageButton
                android:id="@+id/btn_pass"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_circle"
                android:backgroundTint="#FFFFFF"
                android:clickable="true"
                android:elevation="3dp"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="#E94057" />

            <ImageButton
                android:id="@+id/btn_like"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bg_circle"
                android:backgroundTint="#E94057"
                android:clickable="true"
                android:elevation="3dp"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:paddingTop="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/white_heart_icon"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/btn_superLike"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_circle"
                android:backgroundTint="#FFFFFF"
                android:clickable="true"
                android:elevation="3dp"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@android:drawable/btn_star_big_on"
                app:tint="#8A2BE2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL2_mainPage_botNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F6F6"
            android:elevation="10dp"
            android:gravity="bottom|top"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/LL_mainHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:id="@+id/lineMainHome"
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#E94057"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/btnMainHome"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#00FFFFFF"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/home_red" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_mainMatches"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:id="@+id/lineMainMatches"
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#E94057"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/btnMainMatches"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#00FFFFFF"
                    android:scaleType="fitCenter"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:srcCompat="@drawable/matches_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_mainMessages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:id="@+id/lineMainMessages"
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#E94057"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/btnMainMessages"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#00FFFFFF"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/messages_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_mainProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:id="@+id/lineMainProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#E94057"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/btnMainProfile"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#00FFFFFF"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/profile_gray" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>