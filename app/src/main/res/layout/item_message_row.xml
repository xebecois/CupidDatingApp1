<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="12dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_match_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:strokeColor="#E94057"
        app:strokeWidth="2dp"

        app:shapeAppearanceOverlay="@style/CircleImage"/>

    <TextView
        android:id="@+id/tv_match_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_match_last_msg"
        app:layout_constraintEnd_toStartOf="@+id/tv_match_time"
        app:layout_constraintStart_toEndOf="@id/iv_match_profile"
        app:layout_constraintTop_toTopOf="@id/iv_match_profile" />

    <TextView
        android:id="@+id/tv_match_last_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sticker ðŸ˜"
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_match_profile"
        app:layout_constraintEnd_toStartOf="@+id/tv_match_badge"
        app:layout_constraintStart_toStartOf="@id/tv_match_name"
        app:layout_constraintTop_toBottomOf="@id/tv_match_name" />

    <TextView
        android:id="@+id/tv_match_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23 min"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_match_name" />

    <TextView
        android:id="@+id/tv_match_badge"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="#E94057"
        android:gravity="center"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_match_last_msg"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>